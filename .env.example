# LLM Configuration
# Format: "provider:model" for deepagents (e.g. "openai:gpt-4", "openai:gpt-4o")
LLM_MODEL=openai:gpt-4
# Optional: only needed for Bedrock ("bedrock_converse")
# LLM_MODEL_PROVIDER=bedrock_converse

# Paths
CORPUS_DIR=example_data/corpus
OUTPUT_DIR=outputs
GOLDEN_BRD_PATH=example_data/golden_brd.md

# Agent execution
AGENT_TIMEOUT_SEC=300
MAX_RETRIES=2

# Token tracking
TRACK_TOKENS=true
INPUT_COST_PER_1K=0.003
OUTPUT_COST_PER_1K=0.006

# Logging
LOG_LEVEL=INFO

# File size limit (MB)
MAX_FILE_SIZE_MB=50
